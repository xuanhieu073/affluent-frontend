    //- if oneitem === 1
    //-   .parsys_card-title(class=color)=title
    if oneitem === undefined || oneitem === 2
      img.parsys_card-image(src=path + "assets/images/affluent/affluent-hero-small.png", alt="affluent-hero")
    if oneitem === undefined || oneitem === 3
      .parsys_card-desc=desc

