mixin affluent-hero-dot(index)
  .affluent-hero_pagination-item(@click=`goToSlide(${index})` :class=`activeIndex === ${index} && 'dot-active'`)
    .affluent-hero_pagination-dot

mixin affluent-hero-pagination
  .affluent-hero_pagination
    +affluent-hero-dot(0)
    +affluent-hero-dot(1)
    +affluent-hero-dot(2)
    +affluent-hero-dot(3)

